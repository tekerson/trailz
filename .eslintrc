{
    "parser": "babel-eslint",
    "rules": {
        "indent": [ 2, 2, {
          "SwitchCase": 1,
          "VariableDeclarator": { "var": 2, "let": 2, "const": 3}
        }],
        "quotes": [ 2, "double" ],
        "linebreak-style": [ 2, "unix" ],
        "semi": [ 2, "always" ],
        "comma-dangle": [2, "always-multiline"],
        "no-unused-vars": [2, { "argsIgnorePattern": "^_" }]
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
    },
    "plugins": [
        "react"
    ]
}
